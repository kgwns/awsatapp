<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <!-- Enable when default splash theme required. -->
    <!-- <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:colorPrimaryDark">@color/splashBgInitial</item>
    </style> -->

    <style name="PrimaryButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/rounded_primary_btn</item>
        <item name="android:paddingBottom">@dimen/small</item>
        <item name="android:paddingEnd">@dimen/xlarge</item>
        <item name="android:paddingRight">@dimen/xlarge</item>
        <item name="android:paddingStart">@dimen/xlarge</item>
        <item name="android:paddingTop">@dimen/small</item>
        <item name="android:text">@string/login_btn</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">22sp</item>
        <item name="listPreferredItemHeightSmall">80dp</item><!-- menu item height- vary as u need -->
        <item name="android:listPreferredItemHeight">80dp</item>
        <item name="android:fontFamily">@font/awsat_black</item>
    </style>


    <style name="checkBoxStyle" parent="AppTheme">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="NavigationViewTextAppearance">
        <item name="android:fontFamily">@font/awsat_black</item>
    </style>

</resources>
